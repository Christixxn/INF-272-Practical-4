<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Study Group Main Page", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <link href="../Content/Site.css" rel="stylesheet" />
                    <div class="dropdown">
                        <button class="dropbtn">List of People</button>
                        <div class="dropdown-content">
                            @Html.ActionLink("Complete List Of People", "MyStudyGroupView", "MyStudyGroup", new { area = "" }, new { @class = "nav-link" })"
                            <a href="../HTML/JohnDoeHTML.html">John Doe</a>
                            <a href="../HTML/JaneDoeHTML.html">Jane Doe</a>
                            <a href="../HTML/JoanPieterseHTML.html">Joan Pieterse</a>
                            <a href="../HTML/LemmetjieGroenewaltHTML.html">Lemmetjie Groenewalt</a>
                            <a href="../HTML/LewaldoRossHTML.html">Lewaldo Ross</a>
                        </div>
                    </div>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
